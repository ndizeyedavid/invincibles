{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "module": "commonjs",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
